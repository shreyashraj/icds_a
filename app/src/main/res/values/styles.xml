<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppThemeTranslucent" parent="AppTheme">
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontPath">fonts/rawline-semi-bold.ttf</item>
        <item name="android:paddingTop">@dimen/padding_medium</item>
        <item name="android:paddingBottom">@dimen/padding_medium</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_grey_bg</item>
    </style>

    <style name="ToolBarBase" parent="Theme.AppCompat">
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="EditTextColorCustom" parent="AppTheme">
        <item name="colorAccent">@color/broadcast_bg</item>
        <item name="colorControlActivated">@color/broadcast_bg</item>
    </style>


    <style name="TitleText" parent="@android:style/TextAppearance">
        <item name="android:textSize">22sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="BroadcastText" parent="TitleText">
        <item name="fontPath">fonts/Montserrat-Light.ttf</item>
        <item name="android:textColor">@color/broadcast_text</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="ToolbarText" parent="TitleText">
        <item name="fontPath">fonts/rawline-medium.ttf</item>
        <item name="android:textColor">@color/text_body_black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="GreetingText" parent="TitleText">
        <item name="fontPath">fonts/rawline-bold.ttf</item>
        <item name="android:textColor">@color/text_body_black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="NotificationText" parent="TitleText">
        <item name="fontPath">fonts/rawline-bold.ttf</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonText" parent="TitleText">
        <item name="fontPath">fonts/rawline-medium.ttf</item>
        <item name="android:textColor">@color/text_slate_grey</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="BodyText" parent="TitleText">
        <item name="fontPath">fonts/rawline-medium.ttf</item>
        <item name="android:textColor">@color/text_body_black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BodyTextMedium" parent="TitleText">
        <item name="fontPath">fonts/rawline-medium.ttf</item>
        <item name="android:textColor">@color/text_body_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BodyTextSemiBold" parent="TitleText">
        <item name="fontPath">fonts/rawline-semi-bold.ttf</item>
        <item name="android:textColor">@color/text_body_black</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="BodyTextBold" parent="TitleText">
        <item name="fontPath">fonts/rawline-bold.ttf</item>
        <item name="android:textColor">@color/text_body_black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BodyTextRegular" parent="TitleText">
        <item name="fontPath">fonts/rawline-regular.ttf</item>
        <item name="android:textColor">@color/text_body_black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Icomoon" parent="TitleText">
        <item name="fontPath">fonts/icomoon.ttf</item>
        <item name="android:textColor">@color/black_100</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BodyTextThin" parent="TitleText">
        <item name="fontPath">fonts/roboto-slab-thin.ttf</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">70sp</item>
    </style>

    <style name="BodyTextMediumGrey" parent="TitleText">
        <item name="fontPath">fonts/rawline-medium.ttf</item>
        <item name="android:textColor">@color/text_slate_grey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BodyTextBoldMediumGrey" parent="TitleText">
        <item name="fontPath">fonts/rawline-bold.ttf</item>
        <item name="android:textColor">@color/text_slate_grey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BodyTextMediumBlack" parent="TitleText">
        <item name="fontPath">fonts/rawline-medium.ttf</item>
        <item name="android:textColor">@color/text_body_black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BankDetailsText" parent="TitleText">
        <item name="fontPath">fonts/rawline-medium.ttf</item>
        <item name="android:textColor">@color/button_dark_bg</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DrawerText" parent="TitleText">
        <item name="fontPath">fonts/rawline-regular.ttf</item>
        <item name="android:textColor">@color/button_dark_bg</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="EnterPhoneTextPrefix" parent="TitleText">
        <item name="fontPath">fonts/rawline-regular.ttf</item>
        <item name="android:textColor">@color/prefix_light_grey</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="MontRegularDarkGrey20" parent="TitleText">
        <item name="fontPath">fonts/Montserrat-Regular.ttf</item>
        <item name="android:textColor">@color/button_dark_bg</item>
        <item name="android:textSize">20sp</item>
    </style>



    <style name="EnterPhoneTextSuffix" parent="TitleText">
        <item name="fontPath">fonts/rawline-regular.ttf</item>
        <item name="android:textColor">@color/broadcast_text</item>
        <item name="android:textSize">36sp</item>
        <item name="colorAccent">@color/broadcast_bg</item>
        <item name="colorControlActivated">@color/broadcast_bg</item>
    </style>

    <style name="HeaderTextItalicBlack" parent="TitleText">
        <item name="fontPath">fonts/rawline-italic.ttf</item>
        <item name="android:textColor">@color/text_body_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="StarRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_selector</item>
        <item name="android:minHeight">36dip</item>
        <item name="android:maxHeight">36dip</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/prefix_light_grey</item>
        <item name="colorControlHighlight">@color/prefix_light_grey</item>
        <item name="colorControlActivated">@color/butterscotch</item>
    </style>

</resources>
