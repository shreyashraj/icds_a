<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RatingBar">
        <!-- The number of stars (or rating items) to show. -->
        <attr name="numStars" format="integer" />
        <!-- The rating to set by default. -->
        <attr name="rating" format="float" />
        <!-- The step size of the rating. -->
        <attr name="stepSize" format="float" />
        <!-- Whether this rating bar is an indicator (and non-changeable by the user). -->
        <attr name="isIndicator" format="boolean" />
        <!-- The spacing between items. -->
        <attr name="spacing" format="dimension" />
        <!-- What kind of mode for automatic adaptation. -->
        <attr name="automatic" format="enum">
            <!-- Fully automatic  -->
            <enum name="fully" value="0"/>
            <!-- Semi automatic  -->
            <enum name="semi" value="1" />
            <!-- Manual -->
            <enum name="manual" value="2" />
        </attr>
        <!-- The default background image. -->
        <attr name="progress" format="reference" />
        <!-- The progressed background image. -->
        <attr name="progressed" format="reference" />
    </declare-styleable>

    <declare-styleable name="ChipCloud">
        <attr name="deselectedColor" format="color" />
        <attr name="deselectedFontColor" format="color" />
        <attr name="selectedColor" format="color" />
        <attr name="selectedFontColor" format="color" />
        <attr name="selectTransitionMS" format="integer" />
        <attr name="deselectTransitionMS" format="integer" />
        <attr name="selectMode">
            <enum name="single" value="0" />
            <enum name="multi" value="1" />
            <enum name="required" value="2" />
            <enum name="none" value="3" />
        </attr>
        <attr name="gravity">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="center" value="2" />
            <enum name="staggered" value="3" />
        </attr>
        <attr name="typeface" format="string" />
        <attr name="allCaps" format="boolean" />
        <attr name="textSize" format="dimension" />
        <attr name="labels" format="reference"/>
        <attr name="minHorizontalSpacing" format="dimension" />
        <attr name="verticalSpacing" format="dimension" />
    </declare-styleable>
</resources>