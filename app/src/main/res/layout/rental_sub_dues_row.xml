<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginLeft="@dimen/margin_large"
        android:id="@+id/layout_year_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_medium"
        android:orientation="horizontal">

        <TextView

            android:layout_marginRight="@dimen/margin_small"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginLeft="@dimen/margin_large"
            android:id="@+id/text_subdue_title"
            style="@style/BodyTextRegular"
            android:textColor="@color/text_slate_grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_xsmall" />

        <TextView
            android:gravity="end"
            android:layout_marginRight="@dimen/margin_large"
            android:id="@+id/text_subdue_value"
            style="@style/BodyTextBold"
            android:textColor="@color/broadcast_sub_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="@dimen/text_size_xsmall" />

    </LinearLayout>

</RelativeLayout>