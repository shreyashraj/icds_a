<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:fillViewport="true"
        android:paddingBottom="@dimen/margin_72">

        <RelativeLayout
            android:paddingBottom="@dimen/padding_30"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/layout_total_dues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_32"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_large"
                android:layout_marginTop="@dimen/padding_32"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_total_dues_title"
                    style="@style/BodyTextSemiBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/label_your_dues"
                    android:textColor="@color/broadcast_sub_text" />

                <TextView
                    android:id="@+id/text_total_dues_value"
                    style="@style/BodyTextSemiBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/margin_5"
                    android:textSize="@dimen/text_size_30" />
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/layout_due_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_total_dues"
                android:paddingBottom="@dimen/margin_large">

                <TextView
                    android:id="@+id/tv_deposit"
                    style="@style/BodyTextBoldMediumGrey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="@dimen/padding_10"
                    android:layout_marginTop="@dimen/padding_10"
                    android:paddingLeft="@dimen/margin_large"
                    android:text="@string/label_rental_depost"
                    android:textSize="@dimen/default_textsize" />

                <TextView
                    android:id="@+id/tv_deposit_value"
                    style="@style/BodyTextBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/padding_10"
                    android:layout_marginTop="@dimen/padding_10"
                    android:paddingRight="@dimen/margin_large"
                    android:text="Rs 3000"
                    android:textSize="@dimen/default_textsize" />

                <View
                    android:id="@+id/divider_deposit"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/tv_deposit"
                    android:background="@color/edit_light_grey" />

                <TextView
                    android:id="@+id/tv_rent"
                    style="@style/BodyTextBoldMediumGrey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/divider_deposit"
                    android:layout_marginBottom="@dimen/padding_10"
                    android:layout_marginTop="@dimen/padding_10"
                    android:paddingLeft="@dimen/margin_large"
                    android:text="@string/label_rental_rent"
                    android:textSize="@dimen/default_textsize" />


                <TextView
                    android:id="@+id/tv_rent_value"
                    style="@style/BodyTextBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/divider_deposit"
                    android:layout_marginBottom="@dimen/padding_10"
                    android:layout_marginTop="@dimen/padding_10"
                    android:paddingRight="@dimen/margin_large"
                    android:text="Rs 3000"
                    android:textSize="@dimen/default_textsize" />

                <View
                    android:id="@+id/divider_rent"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/tv_rent"
                    android:background="@color/edit_light_grey" />


                <TextView
                    android:id="@+id/tv_late_payment"
                    style="@style/BodyTextBoldMediumGrey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/divider_rent"
                    android:layout_marginBottom="@dimen/padding_10"
                    android:layout_marginTop="@dimen/padding_10"
                    android:paddingLeft="@dimen/margin_large"
                    android:text="@string/label_rental_late_payment"
                    android:textSize="@dimen/default_textsize" />


                <TextView
                    android:id="@+id/tv_late_payment_value"
                    style="@style/BodyTextBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/divider_rent"
                    android:layout_marginBottom="@dimen/padding_10"
                    android:layout_marginTop="@dimen/padding_10"
                    android:paddingRight="@dimen/margin_large"
                    android:text="Rs 3000"
                    android:textSize="@dimen/default_textsize" />

                <View
                    android:id="@+id/divider_late_payment"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/tv_late_payment"
                    android:background="@color/edit_light_grey" />

                <TextView
                    android:id="@+id/tv_other_charges"
                    style="@style/BodyTextBoldMediumGrey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/divider_late_payment"
                    android:layout_marginBottom="@dimen/padding_10"
                    android:layout_marginTop="@dimen/padding_10"
                    android:paddingLeft="@dimen/margin_large"
                    android:text="@string/label_rental_other_charges"
                    android:textSize="@dimen/default_textsize" />



                <TextView
                    android:id="@+id/tv_other_charges_value"
                    style="@style/BodyTextBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/divider_late_payment"
                    android:layout_marginBottom="@dimen/padding_10"
                    android:layout_marginTop="@dimen/padding_10"
                    android:paddingRight="@dimen/margin_large"
                    android:text="Rs 3000"
                    android:textSize="@dimen/default_textsize" />

                <View
                    android:id="@+id/divider_other_charges"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/tv_other_charges"
                    android:background="@color/edit_light_grey" />


            </RelativeLayout>


            <LinearLayout
                android:id="@+id/layout_detailed_breakup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/layout_due_details"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/margin_large"
                android:paddingLeft="@dimen/margin_large"
                android:paddingRight="@dimen/margin_large"
                android:paddingTop="@dimen/margin_xsmall">

                <TextView
                    android:id="@+id/text_detailed_breakup"
                    style="@style/BodyTextMediumGrey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_detailed_breakup"
                    android:textSize="@dimen/text_size_xsmall" />

                <TextView
                    style="@style/Icomoon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin_xsmall"
                    android:paddingRight="@dimen/margin_medium"
                    android:text="@string/icon_right"
                    android:textColor="@color/broadcast_text"
                    android:textSize="@dimen/text_size_xxsmall" />


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layout_no_dues"
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:layout_above="@+id/text_account_details_heading"
                android:background="@color/mdtp_white"
                android:clickable="true">

                <TextView
                    android:id="@+id/text_heading_no_dues"
                    style="@style/GreetingText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_50"
                    android:gravity="center"
                    android:text="@string/label_no_dues"
                    android:textAllCaps="true" />

                <View
                    android:id="@+id/divider_horizontal"
                    android:layout_width="@dimen/margin_20"
                    android:layout_height="1dp"
                    android:layout_below="@+id/text_heading_no_dues"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_small"
                    android:background="@color/button_bg" />

                <TextView
                    android:id="@+id/text_description"
                    style="@style/BodyTextRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider_horizontal"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_xlarge"
                    android:layout_marginRight="@dimen/margin_xlarge"
                    android:layout_marginTop="@dimen/margin_20"
                    android:gravity="center"
                    android:text="@string/label_no_dues_subtext"
                    android:textColor="@color/text_slate_grey" />


                <ImageView
                    android:id="@+id/img_no_dues"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:layout_below="@+id/text_description"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_no_dues" />


            </RelativeLayout>

            <View
                android:id="@+id/divider_no_dues"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/layout_detailed_breakup"
                android:background="@color/edit_light_grey" />

            <TextView
                android:layout_marginTop="@dimen/margin_20"
                android:id="@+id/text_account_details_heading"
                style="@style/BodyTextRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider_no_dues"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_large"
                android:textColor="@color/button_bg" />



            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/layout_account_number_title"
                android:orientation="horizontal"
                android:layout_below="@+id/text_account_details_heading"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_large"
                android:layout_marginTop="@dimen/padding_32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/text_account_number_heading"
                    style="@style/BodyTextMediumGrey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_account_number"
                    android:textAllCaps="true"
                    android:textSize="@dimen/text_size_xsmall" />

                <TextView
                    android:paddingLeft="@dimen/margin_5"
                    android:gravity="center_vertical"
                    android:id="@+id/text_unique_to_heading"
                    style="@style/BodyTextBold"
                    android:textColor="@color/grape_fruit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_account_number_unique"
                    android:textAllCaps="true"
                    android:textSize="@dimen/text_size_xsmall" />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_info_account_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/padding_10"
                    android:src="@mipmap/ic_info" />
            </LinearLayout>




            <TextView
                android:id="@+id/text_account_number_value"
                style="@style/BankDetailsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_account_number_title"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_small"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/text_payment_type_heading"
                style="@style/BodyTextMediumGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_account_number_value"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_large"
                android:layout_marginTop="@dimen/padding_32"
                android:text="@string/label_payment_type"
                android:textAllCaps="true"
                android:textSize="@dimen/text_size_xsmall" />

            <TextView
                android:id="@+id/text_payment_type_value"
                style="@style/BankDetailsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_payment_type_heading"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@string/label_payment_type_value"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/text_ifsc_heading"
                style="@style/BodyTextMediumGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_payment_type_value"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_40"
                android:text="@string/label_ifsc_code"
                android:textAllCaps="true"
                android:textSize="@dimen/text_size_xsmall" />

            <TextView
                android:id="@+id/text_ifsc_value"
                style="@style/BankDetailsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_ifsc_heading"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_small"
                android:textAllCaps="true" />



        </RelativeLayout>


    </android.support.v4.widget.NestedScrollView>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_130"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/rentals_gradient" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_history"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_xsmall"
            android:layout_weight="1"
            android:background="@drawable/button_grey_outline_bg"
            android:text="@string/label_rental_history"
            android:textColor="@color/text_body_black" />

        <Button
            android:id="@+id/button_receipts"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xsmall"
            android:layout_weight="1"
            android:background="@drawable/button_grey_outline_bg"
            android:text="@string/label_rental_receipts"
            android:textColor="@color/text_body_black" />
    </LinearLayout>

</RelativeLayout>

