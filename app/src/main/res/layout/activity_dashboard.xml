<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attrs="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_base" />

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/broadcast_height"
            android:layout_below="@+id/toolbar" />

        <LinearLayout
            android:visibility="invisible"
            android:gravity="bottom"
            android:id="@+id/layout_empty_state"
            android:layout_width="match_parent"
            android:layout_height="@dimen/broadcast_height"
            android:layout_below="@+id/toolbar"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_empty_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_afternoon" />

            <TextView
                android:text="AFTERNOON ARPIT!"
                android:id="@+id/text_greeting_empty_state"
                style="@style/GreetingText"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_xxxlarge"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/text_message_empty_state"
                style="@style/ButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_small"
                android:text="We hope you have a great day!" />

            <View
                android:id="@+id/divider_greeting_empty_state"
                android:layout_width="@dimen/margin_25"
                android:layout_height="@dimen/margin_2"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@color/butterscotch" />

        </LinearLayout>

        <com.rd.PageIndicatorView
            android:id="@+id/page_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/pager"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_medium"
            attrs:piv_animationType="worm"
            attrs:piv_interactiveAnimation="true"
            attrs:piv_radius="@dimen/margin_xsmall"
            attrs:piv_viewPager="@id/pager" />

        <TextView
            android:id="@+id/text_greeting"
            style="@style/GreetingText"
            android:layout_below="@+id/pager"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_medium"
            android:textAllCaps="true" />

        <View
            android:id="@+id/divider_greeting"
            android:layout_width="@dimen/margin_25"
            android:layout_height="@dimen/margin_2"
            android:layout_below="@+id/text_greeting"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/margin_broadcast_text"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/butterscotch" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/divider_greeting"
            android:layout_marginBottom="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_large">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/layout_event"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_events" />
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/layout_events_count"
                                android:src="@color/grape_fruit"
                                android:layout_below="@+id/img"
                                android:layout_toRightOf="@+id/img"
                                android:layout_width="@dimen/margin_20"
                                android:layout_height="@dimen/margin_20"
                                android:layout_marginTop="@dimen/margin_negative15"
                                android:layout_marginLeft="@dimen/margin_negative15"
                                android:layout_gravity="bottom|right" />
                            <TextView
                                android:id="@+id/tv_events_count"
                                android:textSize="@dimen/text_size_10"
                                android:gravity="center"
                                android:text="32"
                                style="@style/NotificationText"
                                android:layout_below="@+id/img"
                                android:layout_toRightOf="@+id/img"
                                android:layout_width="@dimen/margin_20"
                                android:layout_height="@dimen/margin_20"
                                android:layout_marginTop="@dimen/margin_negative15"
                                android:layout_marginLeft="@dimen/margin_negative15"
                                android:layout_gravity="bottom|right" />
                        </RelativeLayout>


                        <TextView
                            style="@style/ButtonText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:text="@string/label_events" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_rentals"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_rental" />

                        <TextView
                            android:paddingTop="@dimen/margin_6"
                            style="@style/ButtonText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:text="@string/label_rentals" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/layout_issue"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_report_issue" />


                        <TextView
                            android:paddingTop="@dimen/margin_6"
                            style="@style/ButtonText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:text="@string/label_issue" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/layout_neighbours"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_neighbors" />

                        <TextView
                            android:paddingTop="@dimen/margin_6"
                            style="@style/ButtonText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:text="@string/label_neighbours" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/divider_horizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium"
                android:background="@color/light_grey" />

            <View
                android:id="@+id/divider_vertical"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium"
                android:background="@color/light_grey" />

        </RelativeLayout>

        <include
            android:id="@+id/error_view"
            layout="@layout/view_error"
            android:visibility="invisible" />

        <include
            android:id="@+id/loading_view"
            layout="@layout/view_loading"
            android:visibility="invisible" />

    </RelativeLayout>

    <!-- The navigation drawer -->
    <LinearLayout
        android:id="@+id/drawer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        android:clickable="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="@dimen/margin_20"
            android:src="@mipmap/ic_drawer_bg" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_large"
            android:background="@color/divider_light_grey" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/left_drawer"
            android:layout_width="@dimen/drawer_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp" />
    </LinearLayout>


</android.support.v4.widget.DrawerLayout>
    </android.support.design.widget.CoordinatorLayout>