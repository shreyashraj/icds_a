<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_small">

    <ImageView
        android:layout_marginRight="@dimen/margin_xlarge"
        android:layout_marginLeft="@dimen/margin_xlarge"
        android:layout_marginTop="@dimen/margin_20"
        android:src="@mipmap/ic_circle_solid_green"
        android:id="@+id/img_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_toRightOf="@+id/img_status"
        android:id="@+id/text_description"
        style="@style/BodyTextRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:textSize="@dimen/text_size_15" />


    <TextView
        android:layout_below="@id/text_description"
        android:layout_toRightOf="@+id/img_status"
        android:id="@+id/text_category"
        style="@style/BodyTextBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:textAllCaps="true"
        android:textSize="@dimen/text_size_xsmall" />

    <TextView
        android:layout_below="@+id/text_category"
        android:layout_toRightOf="@+id/img_status"
        android:textColor="@color/issue_date_text"
        android:id="@+id/text_time"
        android:layout_marginTop="@dimen/margin_medium"
        style="@style/BodyTextMediumGrey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_xsmall" />

    <TextView
        android:layout_toRightOf="@+id/img_status"
        android:textColor="@color/text_slate_grey"
        android:textAllCaps="false"
        style="@style/BodyTextSemiBold"
        android:background="@drawable/button_issue_status"
        android:id="@+id/text_status"
        android:paddingTop="@dimen/margin_6"
        android:paddingBottom="@dimen/margin_6"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_time"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium" />

    <TextView
        android:layout_below="@+id/text_status"
        android:id="@+id/text_change_status"
        style="@style/BodyTextBold"
        android:paddingLeft="@dimen/padding_32"
        android:paddingRight="@dimen/padding_32"
        android:paddingTop="@dimen/padding_10"
        android:paddingBottom="@dimen/padding_10"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_medium"
        android:textAllCaps="true" />

</RelativeLayout>