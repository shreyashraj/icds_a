<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_medium" />

        <TextView
            android:id="@+id/text_profile_name"
            style="@style/BroadcastText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12" />

        <TextView
            android:id="@+id/text_room"
            style="@style/BodyTextBoldMediumGrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_2"
            android:textSize="@dimen/text_size_xsmall" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/BodyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/label_move_in"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/text_check_in"
            style="@style/BodyTextMediumGrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="25th December, 2016" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/divider_horizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_xxxlarge"
                android:layout_marginRight="@dimen/margin_xxxlarge"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginBottom="@dimen/margin_large"
                android:background="@color/divider_light_grey" />

            <View
                android:id="@+id/divider_horizontal_extension"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_large"
                android:background="@color/divider_light_grey" />
        </RelativeLayout>

        <TextView
            style="@style/BodyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/label_move_out"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/text_check_out"
            style="@style/BodyTextMediumGrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="30th December, 2016" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_extension"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_expiration_days"
            style="@style/BodyTextRegular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large"
            android:layout_marginLeft="@dimen/padding_xlarge"
            android:layout_marginRight="@dimen/padding_xlarge"
            android:gravity="center"
            android:text="Your contract with Stayabode expires in 45 days"
            android:textColor="@color/text_slate_grey" />

        <Button
            android:id="@+id/button_extend_contract"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:background="@drawable/button_grey_bg"
            android:text="@string/label_extend_contract" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_extend_within"
                style="@style/BodyTextRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_extend_within_prefix"
                android:textColor="@color/text_slate_grey"
                android:textSize="@dimen/text_size_13" />

            <TextView
                android:id="@+id/tv_extend_within_days"
                style="@style/BodyTextBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10 Days"
                android:textColor="@color/text_slate_grey"
                android:textSize="@dimen/text_size_13" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>